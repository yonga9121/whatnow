<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whatnow"
    >
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Use Camara -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- Use Almacenamiento para lectura -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!-- Use Almacenamiento para escritura -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.WhatNow"
        >
        <activity
            android:name=".ui.home.CandidatureListItem"
            android:exported="true" />
        <activity android:name=".ui.register.SkillsActivity"></activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.whatnow.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="249694960450084" />

        <activity android:name=".MainActivity" />
        <activity
            android:name=".ui.register.registro"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>